<body>
    <%- include('header.ejs') %>
          <form action="/todos" method="POST" class="flex flex-col sm:flex-row items-center gap-4">
        <input type="text" name="title" required placeholder="Todo title"
          class="flex-1 border border-gray-300 p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        <input type="date" name="dueDate" required
          class="border border-gray-300 p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        <button type="Add"
          class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition">Add</button>
      </form>

    <div>
    <%- include('todos.ejs') %>
    </div>
    <div>
    <%- include('footer.ejs') %>
    </div>
</body>
</html>